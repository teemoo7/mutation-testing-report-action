{
  "name": "mutation-testing-report-action",
  "version": "1.0.0",
  "description": "Read mutation testing report generated by Pitest and Stryker Mutator, and creates a check with annotations",
  "main": "index.js",
  "scripts": {
    "lint": "eslint *.js",
    "test": "jest --coverage",
    "prepare": "ncc build index.js -o dist --source-map --license licenses.txt"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teemoo7/mutation-testing-report-action.git"
  },
  "keywords": [
    "Mutation",
    "Testing",
    "Pitest",
    "Stryker",
    "Mutator"
  ],
  "author": "Micael Paquier",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/teemoo7/mutation-testing-report-action/issues"
  },
  "homepage": "https://github.com/teemoo7/mutation-testing-report-action#readme",
  "devDependencies": {
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "jest": "^29.5.0",
    "jest-sonar-reporter": "^2.0.0",
    "prettier": "2.8.8"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "fast-xml-parser": "^4.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "testResultsProcessor": "jest-sonar-reporter",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
